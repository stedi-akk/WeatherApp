<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonViewMargins">
        <item name="android:layout_marginTop">@dimen/common_v_spacing</item>
        <item name="android:layout_marginBottom">@dimen/common_v_spacing</item>
        <item name="android:layout_marginLeft">@dimen/common_lr_spacing</item>
        <item name="android:layout_marginRight">@dimen/common_lr_spacing</item>
    </style>

    <style name="CommonViewPaddings">
        <item name="android:paddingTop">@dimen/common_v_spacing</item>
        <item name="android:paddingBottom">@dimen/common_v_spacing</item>
        <item name="android:paddingLeft">@dimen/common_lr_spacing</item>
        <item name="android:paddingRight">@dimen/common_lr_spacing</item>
    </style>

</resources>
